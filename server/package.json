{
  "name": "techconnect-backend",
  "version": "1.0.0",
  "description": "TechConnect Backend API - Pakistani tech marketplace platform connecting businesses with verified tech companies",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "prod": "NODE_ENV=production node index.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "docker:build": "docker build -t techconnect-backend .",
    "docker:run": "docker run -p 5000:5000 --env-file .env techconnect-backend",
    "db:seed": "node scripts/seedDatabase.js",
    "db:reset": "node scripts/resetDatabase.js",
    "health": "curl -f http://localhost:5000/api/health || echo 'Server not running'"
  },
  "keywords": [
    "techconnect",
    "pakistan",
    "marketplace",
    "tech",
    "backend",
    "api",
    "express",
    "mongodb",
    "gemini-ai"
  ],
  "author": "TechConnect Team <hello@techconnect.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/frqnrza/Web_Engineering_Semester_Project.git"
  },
  "bugs": {
    "url": "https://github.com/frqnrza/Web_Engineering_Semester_Project/issues"
  },
  "homepage": "https://techconnect.com",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cookie-parser": "^1.4.6",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^2.8.0",
    
    "@google/generative-ai": "^0.24.1",
    
    "nodemailer": "^7.0.11",
    
    "socket.io": "^4.7.2",
    
    "axios": "^1.6.2",
    
    "redis": "^4.6.12",
    
    "google-auth-library": "^9.0.0",
    
    "mongodb": "^6.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.11",
    
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.1",
    
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.0.3",
    
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.10",
    "@types/jest": "^29.5.8",
    
    "debug": "^4.3.4",
    "morgan": "^1.10.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/coverage/"
    ],
    "collectCoverageFrom": [
      "routes/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "volta": {
    "node": "18.18.2"
  },
  "private": true
}